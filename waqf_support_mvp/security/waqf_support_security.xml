<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        
        <!-- Record Rules for Applications -->
        
        <!-- Portal users see only their own applications -->
        <record id="waqf_application_portal_rule" model="ir.rule">
            <field name="name">Portal User: Own Applications Only</field>
            <field name="model_id" ref="model_waqf_support_application"/>
            <field name="domain_force">[('create_uid', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('waqf_registry.group_portal_beneficiary'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>
        
        <!-- Case officers see all -->
        <record id="waqf_application_officer_rule" model="ir.rule">
            <field name="name">Case Officer: All Applications</field>
            <field name="model_id" ref="model_waqf_support_application"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('waqf_registry.group_case_officer'))]"/>
        </record>
        
        <!-- Multi-company rule -->
        <record id="waqf_application_company_rule" model="ir.rule">
            <field name="name">Application: Multi-Company</field>
            <field name="model_id" ref="model_waqf_support_application"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>
        
        <!-- Disbursement Rules -->
        <record id="waqf_disbursement_finance_rule" model="ir.rule">
            <field name="name">Finance: All Disbursements</field>
            <field name="model_id" ref="model_waqf_disbursement"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('waqf_registry.group_finance'))]"/>
        </record>
        
        <record id="waqf_disbursement_company_rule" model="ir.rule">
            <field name="name">Disbursement: Multi-Company</field>
            <field name="model_id" ref="model_waqf_disbursement"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>
        
    </data>
</odoo>